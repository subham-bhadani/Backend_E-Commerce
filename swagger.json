{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "description": "A simple e-commerce API",
    "title": "E-commerce API"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "components": {
    "securitySchemes": {
      "JWT": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    }
  },
  "security": [
    {
      "JWT": []
    }
  ],
  "paths": {
    "/api/user/signin": {
      "post": {
        "tags": ["User"],
        "summary": "Login",
        "description": "User login to get a token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "Incorrect Credentials"
          }
        }
      }
    },
    "/api/products/getAllProducts": {
      "get": {
        "tags": ["Products"],
        "summary": "Get all products",
        "description": "Get all products",
        "produces": ["application/json"],
        "security": [{ "JWT": [] }],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/products/getOneProduct/{id}": {
      "get": {
        "tags": ["Products"],
        "summary": "Get product by id",
        "description": "Get product by id",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Product id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [{ "JWT": [] }],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
}
